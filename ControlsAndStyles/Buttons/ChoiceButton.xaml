<UserControl x:Class="ControlsAndStyles.ChoiceButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsAndStyles"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40" Loaded="UserControl_Loaded"  >
    <Grid>
        <Rectangle x:Name="button" Margin="0,0,0,0"  Fill="Gray" RadiusY="1" RadiusX="1" Stroke="#415089" StrokeThickness="1"/>
        <Viewbox>
            <Label Name="label"  Margin="1,10,1,10" FontStretch="Normal" TextBlock.TextAlignment="Center" FontSize="12"/>
        </Viewbox>
    </Grid>
</UserControl>
