<UserControl x:Class="ControlsAndStyles.SuitButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsAndStyles"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40" Loaded="UserControl_Loaded" MouseDown="UserControl_MouseDown">
    <Grid>
        <Rectangle x:Name="button" Margin="1,1,1,1"  Fill="Gray" RadiusY="4" RadiusX="4"/>
        <Viewbox Margin="1,10,1,10">
            <Label x:Name="label"  FontStretch="Normal" TextBlock.TextAlignment="Center" FontSize="15"/>
        </Viewbox>


    </Grid>
</UserControl>
